<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:padding="16dp">

    <!-- الشريط العلوي -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#424242"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/userIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/user"
            android:contentDescription="User Icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open"
            android:textColor="@android:color/white"
            android:textSize="26sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/userIcon"
            app:layout_constraintEnd_toStartOf="@id/jewelryIcon"/>

        <ImageView
            android:id="@+id/jewelryIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/jelewry"
            android:contentDescription="Jewelry Icon"
            app:layout_constraintEnd_toStartOf="@id/addIcon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="10dp"/>

        <ImageView
            android:id="@+id/addIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/add"
            android:contentDescription="Add Icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/mainList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"

        android:layout_marginTop="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Recent -->
            <ImageView
                android:id="@+id/recentIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/clock"
                android:contentDescription="Recent Icon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/recentText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recent"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                app:layout_constraintStart_toEndOf="@id/recentIcon"
                app:layout_constraintTop_toTopOf="@id/recentIcon"
                android:layout_marginStart="10dp"/>


            <!-- Browse -->
            <ImageView
                android:id="@+id/browseIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/cloud"
                android:contentDescription="Browse Icon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/phoneIcon"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/browseText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Browse"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                app:layout_constraintStart_toEndOf="@id/browseIcon"
                app:layout_constraintTop_toTopOf="@id/browseIcon"
                android:layout_marginStart="10dp"/>


            <!-- add a place -->
            <TextView
                android:id="@+id/subsharedText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"

                android:text="Google Drive, SD card, and more..."
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.239"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/browseText" />

            <ImageView
                android:id="@+id/addIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/add"
                android:contentDescription="ADD Icon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/browseIcon"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/addText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add a place"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                app:layout_constraintStart_toEndOf="@id/addIcon"
                app:layout_constraintTop_toTopOf="@id/addIcon"
                android:layout_marginStart="10dp"/>

            <!-- Shared with us.. -->
            <TextView
                android:id="@+id/subsharedText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"

                android:text="Connect to cloud storge"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.173"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/addText" />

            <ImageView
                android:id="@+id/userIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/user"
                android:contentDescription="User Icon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/recentIcon"
                android:layout_marginTop="30dp"/>

            <TextView
                android:id="@+id/sharedText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shared with me .."
                android:textSize="18sp"
                android:textColor="@android:color/white"
                app:layout_constraintStart_toEndOf="@id/userIcon"
                app:layout_constraintTop_toTopOf="@id/userIcon"
                android:layout_marginStart="10dp"/>


            <!-- This device -->

            <ImageView
                android:id="@+id/phoneIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/phone"
                android:contentDescription="Phone Icon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/userIcon"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/deviceText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This device"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                app:layout_constraintStart_toEndOf="@id/phoneIcon"
                app:layout_constraintTop_toTopOf="@id/phoneIcon"
                android:layout_marginStart="10dp"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#404040"
        android:padding="16dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="637dp">

        <ImageView
            android:id="@+id/sharedIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:contentDescription="Shared Icon"
            android:src="@drawable/user"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/sharedText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Shared"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/sharedIcon"
            app:layout_constraintTop_toTopOf="@id/sharedIcon" />

        <ImageView
            android:id="@+id/recentIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="24dp"
            android:contentDescription="Recent Icon"
            android:src="@drawable/clock"
            app:layout_constraintStart_toEndOf="@id/sharedText"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/recentText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Recent"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/recentIcon"
            app:layout_constraintTop_toTopOf="@id/recentIcon" />

        <ImageView
            android:id="@+id/openIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="24dp"
            android:contentDescription="Open Icon"
            android:src="@drawable/folder"
            app:layout_constraintStart_toEndOf="@id/recentText"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/openText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Open"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/openIcon"
            app:layout_constraintTop_toTopOf="@id/openIcon" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
